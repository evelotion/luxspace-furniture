<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header') %>
    <title><%= product.name %> | LuxeSpace</title>
</head>
<body class="bg-[#0a0a0a] text-white">
    <main class="max-w-7xl mx-auto px-6 py-20">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
            <div class="space-y-4">
                <div class="aspect-square rounded-3xl overflow-hidden bg-white/5 border border-white/10">
                    <img id="mainImage" src="<%= product.image_url %>" class="w-full h-full object-cover">
                </div>
                <div class="grid grid-cols-4 gap-4">
                    <% if (product.gallery) { %>
                        <% 
       // Handle kalau gallery masih string (legacy) atau sudah array (JSONB)
       let galleryData = product.gallery;
       if (typeof galleryData === 'string') {
           try { galleryData = JSON.parse(galleryData); } catch(e) { galleryData = []; }
       }
    %>
    <% galleryData.forEach(img => { %>
        <div class="aspect-square rounded-xl overflow-hidden cursor-pointer border border-white/10 hover:border-yellow-500 transition" onclick="document.getElementById('mainImage').src='<%= img %>'">
            <img src="<%= img %>" class="w-full h-full object-cover">
        </div>
    <% }) %>
                    <% } %>
                </div>
            </div>

            <div class="flex flex-col justify-center">
                <span class="text-yellow-500 uppercase tracking-[0.3em] text-xs font-bold mb-4"><%= product.category %></span>
                <h1 class="text-5xl font-serif mb-6"><%= product.name %></h1>
                <p class="text-gray-400 font-light leading-relaxed mb-8 text-lg">
                    <%= product.description %>
                </p>
                
                <div class="text-3xl font-mono mb-10 text-yellow-500/90">
                    IDR <%= new Intl.NumberFormat('id-ID').format(product.price) %>
                </div>

                <div class="flex gap-4">
                    <form action="/cart/add" method="POST" class="flex-1">
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <button type="submit" class="w-full py-4 bg-yellow-500 text-black rounded-full font-bold uppercase tracking-widest hover:bg-yellow-400 transition">
                            Add to Selection
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>