<%- include('partials/header') %>

<div class="min-h-screen pt-32 pb-20 bg-[#FDFBF7] flex justify-center items-center">
    <div class="container mx-auto px-6 max-w-2xl">
        
        <div class="bg-white rounded-[2rem] shadow-xl overflow-hidden relative">
            <div class="h-32 bg-gray-900 relative">
                <div class="absolute -bottom-10 left-10 w-24 h-24 rounded-full bg-yellow-600 border-4 border-white flex items-center justify-center text-3xl font-serif text-white shadow-lg">
                    <%= user.full_name.charAt(0) %>
                </div>
            </div>

            <div class="pt-16 pb-10 px-10">
                <h1 class="text-3xl font-serif text-gray-900 mb-1"><%= user.full_name %></h1>
                <p class="text-sm text-gray-500 mb-8 uppercase tracking-widest"><%= user.email %></p>

                <% if(success_msg && success_msg.length > 0) { %>
                    <div class="bg-green-100 text-green-800 p-3 rounded-lg mb-6 text-sm flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                        <%= success_msg %>
                    </div>
                <% } %>

                <form action="/profile/update" method="POST" class="space-y-6">
                    <div>
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Full Name</label>
                        <input type="text" name="full_name" value="<%= user.full_name %>" class="w-full bg-gray-50 border border-gray-200 rounded-xl p-3 focus:outline-none focus:ring-1 focus:ring-yellow-600 transition">
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Phone Number</label>
                            <input type="text" name="phone" value="<%= user.phone || '' %>" placeholder="+62..." class="w-full bg-gray-50 border border-gray-200 rounded-xl p-3 focus:outline-none focus:ring-1 focus:ring-yellow-600 transition">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Postal Code</label>
                            <input type="text" name="postal_code" value="<%= user.postal_code || '' %>" placeholder="12345" class="w-full bg-gray-50 border border-gray-200 rounded-xl p-3 focus:outline-none focus:ring-1 focus:ring-yellow-600 transition">
                        </div>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">City</label>
                        <input type="text" name="city" value="<%= user.city || '' %>" placeholder="Jakarta Selatan" class="w-full bg-gray-50 border border-gray-200 rounded-xl p-3 focus:outline-none focus:ring-1 focus:ring-yellow-600 transition">
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Full Address</label>
                        <textarea name="address" rows="3" placeholder="Jalan Sudirman No. 1..." class="w-full bg-gray-50 border border-gray-200 rounded-xl p-3 focus:outline-none focus:ring-1 focus:ring-yellow-600 transition"><%= user.address || '' %></textarea>
                    </div>

                    <div class="pt-4 flex items-center justify-between">
                        <a href="/orders" class="text-sm text-gray-500 hover:text-black transition border-b border-transparent hover:border-black pb-1">View My Orders</a>
                        <button type="submit" class="bg-gray-900 text-white px-8 py-3 rounded-xl font-bold text-xs uppercase tracking-[0.2em] hover:bg-yellow-600 transition shadow-lg">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>

<%- include('partials/footer') %>