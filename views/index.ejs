<%- include('partials/header') %>

<header
  class="relative min-h-screen flex items-center bg-[#FAFAFA] overflow-hidden pt-20"
>
  <div
    class="absolute top-0 right-0 w-[60%] h-full bg-[#F3F4F6] clip-path-slant hidden md:block"
    data-aos="fade-left"
    data-aos-duration="1500"
  ></div>

  <div
    class="container mx-auto px-6 relative z-10 grid grid-cols-1 md:grid-cols-2 gap-12 items-center h-full"
  >
    <div
      class="text-left pl-8 md:pl-24 flex flex-col justify-center -mt-20"
      data-aos="fade-right"
    >
      <span
        class="text-gray-400 tracking-[0.3em] text-[10px] font-bold uppercase mb-6 flex items-center gap-3"
      >
        <span class="w-6 h-[1px] bg-gray-400"></span> Est. 2025
      </span>

      <h1
        class="text-5xl md:text-7xl font-serif text-gray-900 leading-[1.1] mb-8"
      >
        Pure <br />
        <span class="italic font-light text-gray-400">Luxury</span> <br />
        Form.
      </h1>

      <p
        class="text-base text-gray-500 font-light mb-10 max-w-sm leading-relaxed border-l border-gray-200 pl-6"
      >
        We don't just sell furniture. We curate the ambiance of your sanctuary
        with silence and elegance.
      </p>

      <div class="flex items-center gap-8">
        <a
          href="#collection"
          class="group relative px-8 py-3 bg-gray-900 text-white text-xs uppercase tracking-widest rounded-full overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <span class="relative z-10 group-hover:text-gray-200 transition"
            >Explore Gallery</span
          >
          <div
            class="absolute inset-0 bg-gray-800 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-300"
          ></div>
        </a>
        <a
          href="#"
          class="flex items-center gap-3 text-xs uppercase tracking-widest font-bold text-gray-900 hover:text-gray-500 transition group"
        >
          <span
            class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center group-hover:border-gray-900 transition"
          >
            <svg class="w-3 h-3 ml-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z" />
            </svg>
          </span>
          Watch Film
        </a>
      </div>
    </div>

    <div
      class="relative flex justify-center md:justify-end pr-4 md:pr-12"
      data-aos="zoom-in"
      data-aos-delay="300"
    >
      <div
        class="w-full max-w-md aspect-[3/4] rounded-[2rem] overflow-hidden shadow-2xl relative z-20 bg-white p-2"
      >
        <img
          src="https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?auto=format&fit=crop&w=800&q=80"
          class="w-full h-full object-cover rounded-[1.5rem] transform hover:scale-105 transition duration-[3s] ease-out"
          alt="Luxury Chair"
        />
      </div>
      <div
        class="absolute -bottom-10 right-10 w-64 h-64 bg-gray-200 rounded-full blur-3xl opacity-50 z-0"
      ></div>
      <div
        class="absolute -top-10 left-10 w-32 h-32 bg-gray-100 rounded-full blur-2xl opacity-60 z-0"
      ></div>
    </div>
  </div>
</header>

<style>
  .clip-path-slant {
    clip-path: polygon(20% 0%, 100% 0, 100% 100%, 0% 100%);
  }
</style>

<section id="collection" class="bg-[#FDFBF7] py-24 relative z-10">
  <div class="container mx-auto px-6">
    <div class="flex justify-between items-end mb-16" data-aos="fade-up">
      <h2 class="text-5xl font-serif text-gray-900">Curated Objects</h2>
      <p
        class="hidden md:block text-gray-400 text-sm tracking-widest uppercase text-right"
      >
        Scroll Down <br />
        to Discover
      </p>
    </div>

    <div class="columns-1 md:columns-2 lg:columns-3 gap-8 space-y-8">
      <% products.forEach((product, index) => { %>

      <div
        class="break-inside-avoid group relative mb-8"
        data-aos="fade-up"
        data-aos-delay="<%= (index % 3) * 100 %>"
      >
        <div
          class="relative overflow-hidden rounded-xl shadow-md group-hover:shadow-2xl transition duration-500 ease-out"
        >
          <a
            href="/product/<%= product.id %>"
            class="absolute inset-0 z-10 cursor-pointer"
          ></a>
          <div
            class="absolute top-4 right-4 z-20 opacity-0 group-hover:opacity-100 transition duration-300 translate-y-[-10px] group-hover:translate-y-0"
          >
            <button
              onclick="addToCartAnimated(this, '<%= product.id %>', '<%= product.image_url %>')"
              class="bg-white text-black w-10 h-10 rounded-full flex items-center justify-center hover:bg-yellow-500 hover:text-white shadow-lg transition transform active:scale-90 relative z-30"
            >
              <span class="text-xl leading-none mb-1">+</span>
            </button>
          </div>

          <img
            src="<%= product.image_url %>"
            alt="<%= product.name %>"
            class="w-full object-cover transform group-hover:scale-110 transition duration-[1.5s]"
          />

          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition duration-500 pointer-events-none"
          ></div>

          <div
            class="absolute bottom-0 left-0 right-0 p-6 translate-y-4 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition duration-500 pointer-events-none"
          ></div>
        </div>

        <div
          class="mt-4 flex justify-between items-center px-2 group-hover:opacity-50 transition duration-300"
        >
          <h4 class="text-gray-900 font-serif text-lg">
            <a href="/product/<%= product.id %>"><%= product.name %></a>
          </h4>
          <span class="text-sm font-bold text-gray-500">
            <%= new Intl.NumberFormat('id-ID', { style: 'currency', currency:
            'IDR', minimumFractionDigits: 0 }).format(product.price) %>
          </span>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</section>

<div
  class="py-6 bg-white border-y border-gray-100 overflow-hidden relative mb-24 shadow-sm z-20"
>
  <div
    class="absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-white to-transparent z-10"
  ></div>
  <div
    class="absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-white to-transparent z-10"
  ></div>

  <div class="flex whitespace-nowrap animate-marquee items-center">
    <span
      class="text-2xl md:text-3xl font-serif text-gray-900 px-8 flex items-center tracking-widest opacity-80"
    >
      TIMELESS ELEGANCE
      <span class="text-xs text-gray-300 mx-6">◇</span> SUSTAINABLE MATERIALS
      <span class="text-xs text-gray-300 mx-6">◇</span> HANDCRAFTED PERFECTION
      <span class="text-xs text-gray-300 mx-6">◇</span> MODERN MINIMALISM
      <span class="text-xs text-gray-300 mx-6">◇</span>
    </span>
  </div>
</div>

<style>
  .stroke-text {
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.3);
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  .animate-marquee {
    display: inline-block;
    animation: marquee 20s linear infinite;
  }
</style>

<%- include('partials/footer') %>
