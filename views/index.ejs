<%- include('partials/header') %>

<header class="relative min-h-[90vh] md:min-h-screen flex items-center bg-[#FAFAFA] overflow-hidden pt-28 pb-16 md:pt-40 md:pb-20">
  
  <div
    class="absolute top-0 right-0 w-[60%] h-full bg-[#F3F4F6] clip-path-slant hidden md:block"
    data-aos="fade-left"
    data-aos-duration="1500"
  ></div>

  <div
    class="container mx-auto px-6 relative z-10 grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-12 items-center h-full"
  >
    <div
      class="text-center md:text-left pl-0 md:pl-24 flex flex-col justify-center mt-0 md:-mt-40 relative z-20"
      data-aos="fade-right"
    >
      <span
        class="text-gray-400 tracking-[0.3em] text-[10px] font-bold uppercase mb-4 md:mb-6 flex items-center justify-center md:justify-start gap-3"
      >
        <span class="w-6 h-[1px] bg-gray-400 hidden md:block"></span> 
        Est. 2025
      </span>

      <h1
        class="text-4xl md:text-7xl font-serif text-gray-900 leading-tight md:leading-[1.1] mb-6 md:mb-8"
      >
        Pure <br class="hidden md:block" />
        <span class="italic font-light text-gray-400">Luxury</span> <br class="hidden md:block" />
        Form.
      </h1>

      <p
        class="text-sm md:text-base text-gray-500 font-light mb-8 md:mb-10 max-w-xs md:max-w-sm mx-auto md:mx-0 leading-relaxed md:border-l border-gray-200 md:pl-6"
      >
        We don't just sell furniture. We curate the ambiance of your sanctuary
        with silence and elegance.
      </p>

      <div class="flex items-center justify-center md:justify-start gap-6 md:gap-8">
        <a
          href="#collection"
          class="group relative px-6 py-3 md:px-8 md:py-3 bg-gray-900 text-white text-[10px] md:text-xs uppercase tracking-widest rounded-full overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <span class="relative z-10 group-hover:text-gray-200 transition"
            >Explore Gallery</span
          >
          <div
            class="absolute inset-0 bg-gray-800 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-300"
          ></div>
        </a>
        <a
          href="#"
          class="flex items-center gap-3 text-[10px] md:text-xs uppercase tracking-widest font-bold text-gray-900 hover:text-gray-500 transition group"
        >
          <span
            class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center group-hover:border-gray-900 transition"
          >
            <svg class="w-3 h-3 ml-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z" />
            </svg>
          </span>
          Watch Film
        </a>
      </div>
    </div>

    <div
      class="relative flex justify-center md:justify-end pr-0 md:pr-12 mt-4 md:mt-0"
      data-aos="zoom-in"
      data-aos-delay="300"
    >
      <div
        class="w-[85%] md:w-full max-w-md aspect-[3/4] md:-mt-20 rounded-[2rem] overflow-hidden shadow-2xl relative z-20 bg-white p-2"
      >
        <img
          src="/uploads/header.png"
          class="w-full h-full object-cover rounded-[1.5rem] transform hover:scale-105 transition duration-[3s] ease-out"
          alt="Luxury Chair"
        />
      </div>
      
      <div
        class="absolute -bottom-10 right-5 md:right-10 w-48 md:w-64 h-48 md:h-64 bg-gray-200 rounded-full blur-3xl opacity-50 z-0"
      ></div>
      <div
        class="absolute -top-10 left-5 md:left-10 w-24 md:w-32 h-24 md:h-32 bg-gray-100 rounded-full blur-2xl opacity-60 z-0"
      ></div>
    </div>
  </div>
</header>

<style>
  .clip-path-slant {
    clip-path: polygon(20% 0%, 100% 0, 100% 100%, 0% 100%);
  }
</style>

<section id="collection" class="bg-[#FDFBF7] py-16 md:py-24 relative z-10">
  <div class="container mx-auto px-4 md:px-6">
    <div class="flex justify-between items-end mb-10 md:mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-5xl font-serif text-gray-900 text-center md:text-left w-full md:w-auto">Curated Objects</h2>
      <p class="hidden md:block text-gray-400 text-sm tracking-widest uppercase text-right">
        Scroll Down <br /> to Discover
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-8">
      <% products.forEach((product, index) => { %>

      <div
        class="group relative bg-white rounded-2xl shadow-sm hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 border border-gray-100 p-2 md:p-3"
        data-aos="fade-up"
        data-aos-delay="<%= (index % 4) * 100 %>"
      >
        <div class="relative aspect-square overflow-hidden rounded-xl bg-gray-50 mb-3 flex items-center justify-center">
          <a href="/product/<%= product.id %>" class="absolute inset-0 z-10 cursor-pointer"></a>
          
          <div class="absolute top-2 right-2 md:top-3 md:right-3 z-20 opacity-0 group-hover:opacity-100 transition duration-300 translate-y-[-10px] group-hover:translate-y-0">
            <button
              onclick="addToCartAnimated(this, '<%= product.id %>', '<%= product.image_url %>')"
              class="bg-white text-black w-8 h-8 md:w-9 md:h-9 rounded-full flex items-center justify-center hover:bg-black hover:text-white shadow-lg transition transform active:scale-90 border border-gray-100"
            >
              <span class="text-lg leading-none mb-0.5">+</span>
            </button>
          </div>

          <img
            src="<%= product.image_url %>"
            alt="<%= product.name %>"
            class="w-full h-full object-contain p-4 transform group-hover:scale-110 transition duration-[1.5s]"
          />
        </div>

        <div class="px-1 pb-1">
          <div class="flex flex-col md:flex-row justify-between items-start gap-1 mb-1">
             <h4 class="text-gray-900 font-serif text-sm md:text-lg leading-tight truncate w-full">
              <a href="/product/<%= product.id %>"><%= product.name %></a>
            </h4>
          </div>
          
          <div class="flex justify-between items-center">
             <span class="text-[10px] text-gray-400 uppercase tracking-widest hidden md:block"><%= product.category %></span>
             <span class="text-xs md:text-sm font-bold text-gray-900">
                <%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(product.price) %>
             </span>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</section>

<div
  class="py-6 bg-white border-y border-gray-100 overflow-hidden relative mb-24 shadow-sm z-20"
>
  <div
    class="absolute inset-y-0 left-0 w-16 md:w-32 bg-gradient-to-r from-white to-transparent z-10"
  ></div>
  <div
    class="absolute inset-y-0 right-0 w-16 md:w-32 bg-gradient-to-l from-white to-transparent z-10"
  ></div>

  <div class="flex whitespace-nowrap animate-marquee items-center">
    <span
      class="text-xl md:text-3xl font-serif text-gray-900 px-8 flex items-center tracking-widest opacity-80"
    >
      TIMELESS ELEGANCE
      <span class="text-xs text-gray-300 mx-6">◇</span> SUSTAINABLE MATERIALS
      <span class="text-xs text-gray-300 mx-6">◇</span> HANDCRAFTED PERFECTION
      <span class="text-xs text-gray-300 mx-6">◇</span> MODERN MINIMALISM
      <span class="text-xs text-gray-300 mx-6">◇</span>
    </span>
  </div>
</div>

<style>
  .stroke-text {
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.3);
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  .animate-marquee {
    display: inline-block;
    animation: marquee 20s linear infinite;
  }
</style>

<%- include('partials/footer') %>