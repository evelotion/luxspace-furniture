<%- include('../partials/header') %>
<div class="flex items-center justify-center min-h-screen pt-32 pb-32 relative z-10">
    <div class="glass p-10 rounded-2xl shadow-2xl w-full max-w-md mx-4 bg-white">
        <div class="text-center mb-8">
            <h2 class="text-2xl font-serif text-gray-900 mb-2">Reset Password</h2>
            <p class="text-gray-500 text-sm">Create a new secure password.</p>
        </div>
        <form action="/auth/reset-password" method="POST" class="space-y-5">
            <input type="hidden" name="email" value="<%= email %>">
            <div>
                <label class="block text-xs uppercase tracking-wider text-gray-500 mb-2 font-bold">New Password</label>
                <input type="password" name="password" required class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3">
            </div>
            <button type="submit" class="w-full bg-gray-900 text-white py-3 rounded-lg font-bold tracking-wide hover:bg-yellow-600 transition">CHANGE PASSWORD</button>
        </form>
    </div>
</div>
<%- include('../partials/footer') %>